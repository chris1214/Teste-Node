<html>
    <body>
        <div>
            <form action="/produtos" method="post">
                <div>
                    <label for="titulo">Titulo do Livro</label>
                    <input type="text" id="titulo" placeholder="Titulo" name="titulo" />
                </div>
                <div>
                    <label for="preco">Preço do Livro</label>
                    <input type="number" id="preco" placeholder="100.00" name="preco" />
                </div>
                <div>
                    <label for="descricao">Descrição do Livro</label>
                    <textarea id="descricao" placeholder="Descrição" name="descricao"></textarea>
                </div>
                <div>
                    <button type="submit" id="salvar">Salvar</button>
                </div>
            </form>
        </div>
    </body>
</html>